<mah:MetroWindow x:Class="MultiLauncher.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MultiLauncher"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="Options" Height="200" Width="200">
    <Grid>
        <StackPanel>
            <Button Name="OpenApplicationsJson" Click="OpenApplicationsJson_OnClick">Open applications.json</Button>
            <Button Name="RefreshApplicationsJson" Click="RefreshApplicationsJson_OnClick">Refresh applications.json</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button Name="Close" Click="Close_OnClick" HorizontalAlignment="Center">Close</Button>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
